<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.northamericanwildlifesounds"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.northamericanwildlifesounds.Intro"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.northamericanwildlifesounds.Main"
            android:label="@string/classNameMain" >
            <intent-filter>
                <action android:name="com.example.northamericanwildlifesounds.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.northamericanwildlifesounds.Animallist"
            android:label="@string/classNameAnimalList" >
            <intent-filter>
                <action android:name="com.example.northamericanwildlifesounds.ANIMALLIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.northamericanwildlifesounds.Game"
            android:label="@string/classNameGame" >
            <intent-filter>
                <action android:name="com.example.northamericanwildlifesounds.GAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.northamericanwildlifesounds.AnimalListSub"
            android:label="@string/title_activity_animal_list_sub" >
        </activity>
        <activity
            android:name="com.example.northamericanwildlifesounds.SoundDisplay"
            android:label="@string/title_activity_sound_display" >
                <intent-filter>
                <action android:name="com.example.northamericanwildlifesounds.SOUNDDISPLAY" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
